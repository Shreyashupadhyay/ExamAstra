<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Branch_Selection">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="397dp"
        android:layout_height="48dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="58dp"
        android:background="#86FFFFFF"
        android:fontFamily="@font/metrophobic"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Welcome To ExamAstra"
        android:textColor="#214723"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/eng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eng"
        android:layout_width="165dp"
        android:layout_height="130dp"
        android:layout_marginBottom="436dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/en" />

    <ImageView
        android:id="@+id/med"
        android:layout_width="165dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eng"
        app:srcCompat="@drawable/med" />

</androidx.constraintlayout.widget.ConstraintLayout>